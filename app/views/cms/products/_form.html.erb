<%= form_with(model: [:cms, product], local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h4>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :avatars, "Product Images (High Quality)", class: "form-label" %>
    <%= form.file_field :avatars, multiple: true, class: "form-control" %>
    <div class="form-text">PNG, JPG, GIF up to 10MB</div>
  </div>

  <% if product.avatars.attached? %>
    <div class="mb-3">
      <label class="form-label">Attached Images:</label>
      <div class="row g-2">
        <% product.avatars.each do |avatar| %>
          <div class="col-6 col-sm-4 col-md-3 col-lg-2 position-relative">
            <div class="form-check">
              <%= check_box_tag "remove_avatars[]", avatar.id, false, class: "form-check-input", id: "remove_avatar_#{avatar.id}" %>
              <label class="form-check-label text-danger small" for="remove_avatar_<%= avatar.id %>">
                Remove
              </label>
            </div>
            <%= image_tag avatar, class: "img-fluid rounded mb-2" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to 'Cancel', cms_products_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
