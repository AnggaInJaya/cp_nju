<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Products</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to 'New Product', new_cms_product_path, class: "btn btn-sm btn-outline-primary" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th scope="col" style="width: 80px;">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Created At</th>
        <th scope="col" class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <% if product.avatars.attached? %>
              <%= image_tag product.avatars.first.variant(:thumb), class: "rounded", style: "width: 40px; height: 40px; object-fit: cover;" %>
              <%#= image_tag product.avatars.first, class: "rounded", style: "width: 40px; height: 40px; object-fit: cover;" %>
            <% else %>
              <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="fas fa-image text-secondary"></i>
              </div>
            <% end %>
          </td>
          <td class="fw-medium"><%= link_to product.name, cms_product_path(product) %></td>
          <td><%= product.category&.name || 'Uncategorized' %></td>
          <td><%= product.created_at.strftime("%B %d, %Y") %></td>
          <td class="text-end">
            <div class="btn-group">
              <%= link_to edit_cms_product_path(product), class: "btn btn-sm btn-outline-secondary", title: "Edit" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to cms_product_path(product), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Apa anda yakin menghapus #{product.name}?" }, class: "btn btn-sm btn-outline-danger", title: "Delete" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
