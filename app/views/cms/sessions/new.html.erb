<h2>CMS Login</h2>

<% if flash[:alert] %>
  <p style="color:red"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: cms_login_path, method: :post, local: true do %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Login" %>
<% end %>
