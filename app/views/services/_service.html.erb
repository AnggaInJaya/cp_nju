<div class="col-lg-12 fade-in" style="--delay: <%= rand(0..2) %>s">
  <div class="portfolio-item row g-0">
    <div class="col-lg-6 p-3">
      <% if service.avatar.attached? %>
        <%= image_tag service.avatar, class: "w-100 h-100 rounded", style: "min-height: 300px; object-fit: cover;", alt: service.name %>
      <% else %>
        <div class="bg-light d-flex justify-content-center align-items-center h-100 rounded" style="min-height: 300px;">
          <span class="text-muted">No Image</span>
        </div>
      <% end %>
    </div>
    <div class="col-lg-6 p-3">
      <h2 class="h3 fw-bold <%= ['text-primary','text-secondary','text-success','text-danger','text-warning','text-info'].sample %>">
        <%= service.name %>
      </h2>
      <hr class="my-3">
      <%= service.content %>
    </div>
  </div>
</div>
