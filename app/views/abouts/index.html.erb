<%= render 'layouts/hero_banner' %>

<section id="about" class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto text-center">
                <h2 class="mb-4 fw-bold"><%= @about.name %></h2>
            </div>
            <div class="col-lg-10 mx-auto">
                <p class="fs-5 text-muted"><%#= simple_format(@about.description) %></p>
                <%= @about.content %>
            </div>
        </div>
    </div>
</section>